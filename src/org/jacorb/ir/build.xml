<?xml version="1.0"?>

<project name="orb" default="all" basedir="../../../..">

  <!-- ==================================================== -->
  <!--             Interface Repository build               -->
  <!-- $Id: build.xml,v 1.5 2002-03-12 11:32:45 jason.courage Exp $ -->
  <!-- ==================================================== -->

   <target name="init">
	<property name="dirs.base" value="${basedir}"/>
	<property name="classdir" value="${dirs.base}/classes"/>
	<property name="src" value="${dirs.base}/src"/>
   </target>

   <target name="all" depends="init,compile"/>

   <target name="compile">
	<javac debug="${debug}" srcdir="${src}"
               destdir="${classdir}"
               bootclasspath="${dirs.base}/classes:${java.home}/lib/rt.jar"
	       includes="org/jacorb/ir/*.java,org/jacorb/ir/**/*.java"
	        />
   </target>

   <target name="clean" depends="init">
         <delete dir="${classdir}/org/jacorb/ir"/>
   </target>

</project>





