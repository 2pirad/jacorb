<?xml version="1.0"?>

<project name="jacorb" default="all" basedir="../../..">

  <!-- ==================================================== -->
  <!--            JacORB ORB build file                         -->
  <!-- $Id: build.xml,v 1.20 2002-05-06 14:41:42 gerald Exp $ -->
  <!-- ==================================================== -->

   <target name="init" depends="value-handler-test">
	<property name="Name" value="jacorb-orb"/>
	<property name="name" value="jacorb-orb"/>
	<property name="dirs.base" value="${basedir}"/>
	<property name="classdir" value="${dirs.base}/classes"/>
	<property name="extpath" value="${dirs.base}/classes"/>
	<property name="classpath" value="${dirs.base}/classes:${java.class.path}"/>
	<property name="jsrc" value="${dirs.base}/src"/>
	<property name="lib" value="${dirs.base}/lib"/>
	<property name="include" value="${dirs.base}/idl"/>
	<property name="jidlflags" value="-I${include}/omg
	-I${include}/jacorb -ir -d ${jsrc}/generated"/>
   </target>

   <target name="value-handler-test" unless="no-rmi">
        <available classname="javax.rmi.CORBA.ValueHandler" property="valuehandler.present" />
   </target>

   <!-- all -->

   <target name="all" depends="init,idlcompile,subdirs" />

   <target name="idlcompile" depends="init,idl">
	<javac debug="${debug}" srcdir="${jsrc}/generated/"
               destdir="${classdir}"
               bootclasspath="${dirs.base}/classes:${java.home}/lib/rt.jar"
	       includes="org/jacorb/proxy/**,org/jacorb/imr/**,org/jacorb/events/**,org/jacorb/orb/**,org/jacorb/util/tracing/**"
	/>
   </target>

   <!-- Determine if IDL compilation is necessary. -->


   <target name="idl" depends="init">
	   <java classname="org.jacorb.idl.parser"
                 fork="yes"
                 classpath="${classpath}">
                 <arg line="${jidlflags} -sloppy_names"/>

                 <arg file="${include}/jacorb/Proxy.idl"/>

                 <arg file="${include}/jacorb/imr.idl"/>
                 <arg file="${include}/jacorb/channel.idl"/>
                 <arg file="${include}/jacorb/Tracing.idl"/>
           </java>           

   </target>

   <target name="valuehandler" depends="valuehandler-real,valuehandler-dummy" />

   <target name="valuehandler-dummy" unless="valuehandler.present">
      <echo message="ValueHandler not present, creating dummy wrapper."/>
      <copy file="src/org/jacorb/util/ValueHandler.dummy"
            tofile="src/org/jacorb/util/ValueHandler.java"
            overwrite="yes"/>
   </target>

   <target name="valuehandler-real" if="valuehandler.present">
      <echo message="ValueHandler is present, wrapping it."/>
      <copy file="src/org/jacorb/util/ValueHandler.real"
            tofile="src/org/jacorb/util/ValueHandler.java"
            overwrite="yes"/>
   </target>

   <target name="utils" depends="init,valuehandler">
   	<javac debug="${debug}" srcdir="${jsrc}"
               destdir="${classdir}"
               includes="org/jacorb/util/*.java,org/jacorb/util/**/*.java"
	       />
   </target>

   <target name="subdirs"
               depends="valuehandler,orb,utils,poa,proxy,imr,ir,naming,events,concurrency,transaction,trading,tracing,security">
   </target>

<!--proxy-->

   <target name="proxy" depends="init" >
   	<javac debug="${debug}" srcdir="${jsrc}"
               destdir="${classdir}"
	       includes="org/jacorb/proxy/*.java"
	       />
   </target>

   <target name="poa" depends="init" >
   	<ant antfile="${jsrc}/org/jacorb/poa/build.xml" dir="${basedir}"/>
   </target>

   <target name="ir" depends="init">
   	<ant antfile="${jsrc}/org/jacorb/ir/build.xml"  dir="${basedir}"/>
   </target>

   <target name="transaction" depends="init">
   	<ant antfile="${jsrc}/org/jacorb/transaction/build.xml" dir="${basedir}"/>
   </target>

   <target name="collection" depends="init">
   	<ant antfile="${jsrc}/org/jacorb/collection/build.xml" dir="${basedir}"/>
   </target>

   <target name="concurrency" depends="init">
   	<ant antfile="${jsrc}/org/jacorb/concurrency/build.xml" dir="${basedir}"/>
   </target>

   <target name="orb" depends="init">
   	<ant antfile="${jsrc}/org/jacorb/orb/build.xml" dir="${basedir}"/>
   </target>

   <target name="imr"  depends="init">
   	<ant antfile="${jsrc}/org/jacorb/imr/build.xml" dir="${basedir}"/>
   </target>

   <target name="naming" depends="init">
   	<ant antfile="${jsrc}/org/jacorb/naming/build.xml" dir="${basedir}"/>
   </target>

   <target name="security" depends="init">
   	<ant antfile="${jsrc}/org/jacorb/security/build.xml" dir="${basedir}"/>
   </target>

   <target name="events" depends="init">
   	<ant antfile="${jsrc}/org/jacorb/events/build.xml" dir="${basedir}"/>
   </target>

   <target name="trading" depends="init">
   	<ant antfile="${jsrc}/org/jacorb/trading/build.xml" dir="${basedir}"/>
   </target>

   <target name="tracing" depends="init">
   	<ant antfile="${jsrc}/org/jacorb/util/tracing/build.xml" dir="${basedir}"/>
   </target>

   <target name="clean">
      <ant antfile="build.xml" dir="orb" target="clean"/>
      <ant antfile="build.xml" dir="util" target="clean"/>
   </target>

</project>
