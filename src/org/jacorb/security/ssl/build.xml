<?xml version="1.0"?>

<!DOCTYPE project [ <!ENTITY common SYSTEM "file:../../../../../etc/common.xml"> ]>

<project name="ssl" default="all" basedir="../../../../..">

  <!-- ==================================================== -->
  <!--               ssl build file                         -->
  <!-- $Id: build.xml,v 1.8 2004-10-21 14:41:45 francisco Exp $ -->
  <!-- ==================================================== -->

   &common;

   <target name="check-props">
      <available classname="iaik.x509.X509Certificate" property="iaik.present" />
      <available classname="com.sun.net.ssl.SSLContext" property="sun_jsse.present" />
   </target>

   <target name="all" depends="init,compile,check-props,iaik,sun_jsse">
   </target>

   <target name="compile">
      <antcall target="jacorb-javac">
         <param name="javac-includes" value="org/jacorb/security/ssl/*.java"/>
      </antcall>
   </target>

   <target name="iaik" if="iaik.present">
      <ant antfile="${src}/org/jacorb/security/ssl/iaik/build.xml" dir="${basedir}"/>
   </target>


   <target name="sun_jsse" if="sun_jsse.present" unless="iaik.present">
      <ant antfile="${src}/org/jacorb/security/ssl/sun_jsse/build.xml" dir="${basedir}"/>
   </target>
</project>
