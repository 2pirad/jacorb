<?xml version="1.0"?>

<project name="tracing" default="all" basedir="../../../../..">

    <!-- ==================================================== -->
    <!--             Tracing build file                       -->
    <!-- ==================================================== -->

    <target name="init">
        <property name="dirs.base" value="${basedir}"/>
        <property name="src" value="${dirs.base}/src"/>
        <property name="classdir" value="${dirs.base}/classes"/>
        <property name="classpath" value="${dirs.base}/classes:${java.class.path}"/>
        <property name="lib" value="${dirs.base}/lib"/>
        <property name="include" value="${dirs.base}/idl"/>
        <taskdef name="jacidl"
                 classname="org.jacorb.idl.JacIDL"
                 classpath="${basedir}/classes"/>
    </target>


    <target name="all" depends="init,idl">
        <javac debug="${debug}" srcdir="${dirs.base}/src/generated"
               destdir="${classdir}"
               includes="org/jacorb/util/tracing/*.java,org/jacorb/util/tracing/**/*.java"/>
        <javac debug="${debug}" srcdir="${dirs.base}/src"
               destdir="${classdir}"
               includes="org/jacorb/util/tracing/*.java"/>
    </target>


    <target name="idl" >
        <jacidl srcdir="${include}/jacorb"
                destdir="${src}/generated"
                includepath="${include}/omg"
                includes="Tracing.idl"/>
    </target>


    <target name="clean">
        <delete dir="${classdir}/org/jacorb/util/tracing"/>
        <delete dir="${dirs.base}/src/generated/org/jacorb/util/tracing"/>
    </target>
</project>
