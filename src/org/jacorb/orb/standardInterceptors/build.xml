<?xml version="1.0"?>

<project name="standardInterceptor" default="all" basedir="../../../../..">

  <!-- ==================================================== -->
  <!--      JacORB Standard Interceptors build file         -->
  <!-- $Id: build.xml,v 1.6 2002-09-12 14:29:36 david.robison Exp $ -->
  <!-- ==================================================== -->

   <target name="init">
	<property name="dirs.base" value="${basedir}"/>
	<property name="classdir" value="${dirs.base}/classes"/>
	<property name="src" value="${dirs.base}/src"/>
	<property name="lib" value="${dirs.base}/lib"/>
	<property name="include" value="${dirs.base}/idl"/>
	<property name="idlflags" 
                value="-I${include}/omg -I${include}/jacorb -d
	${src}/generated"/>
      <available classname="org.ietf.jgss.GSSManager" property="jgss.present" />       
  </target>

   <target name="all" depends="init">
	<javac debug="${debug}" srcdir="${src}"
               destdir="${classdir}"
	       includes="jacorb/orb/standardInterceptors/*.java"
	       />
   </target>

   <target name="all" depends="init,compile,jggs" />

   <target name="compile">
	<javac debug="${debug}" srcdir="${src}"
               destdir="${classdir}"
	        includes="jacorb/orb/standardInterceptors/*.java"
		  excludes="jacorb/orb/standardInterceptors/SAS*.java"
	        />
   </target>

   <target name="jgss" if="jgss.present">
	<javac debug="${debug}" srcdir="${src}"
               destdir="${classdir}"
	       includes="jacorb/orb/standardInterceptors/SAS*.java"
	        />
   </target>

   <target name="clean">
   </target>

</project>





