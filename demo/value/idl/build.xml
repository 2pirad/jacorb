<?xml version="1.0"?>

<project name="demo" default="all" basedir="../../..">

   <taskdef name="jacidl" classname="org.jacorb.idl.JacIDL"
      classpath="${basedir}/classes"/>

  <!-- ==================================================== -->
  <!--             Demo build file                         -->
  <!-- ==================================================== -->

   <target name="init">
	<property name="name" value="value/idl"/>
	<property name="dirs.base" value="${basedir}"/>
	<property name="classdir" value="${dirs.base}/classes"/>
	<property name="lib" value="${dirs.base}/lib"/>
   </target>

   <target name="all" depends="init,idl">
	<javac srcdir="${dirs.base}/demo/${name}/generated"
               destdir="${classdir}"
	       includes="**/*.java"
	        />

	<javac srcdir="${dirs.base}"
               destdir="${classdir}"
	       includes="demo/${name}/*.java"
	        />
   </target>

   <target name="idl" depends="init">
        <jacidl 
              destdir="${dirs.base}/demo/${name}/generated" 
              includes="${dirs.base}/demo/${name}/server.idl"/>
   </target>


   <target name="clean" depends="init">
           <delete dir="${classdir}/demo/${name}"/>
           <delete dir="${dirs.base}/demo/${name}/generated"/>
   </target>

</project>





