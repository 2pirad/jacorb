		destdir="${src}/generated"/>
        <!--
	<java classname="org.jacorb.idl.parser" classpath="${classpath}" fork="yes">
	      <arg line="${idlflags} -noskel  ${include}/omg/IOP_N.idl"/>
	</java>
        -->
   </target>

   <target name="portableserver" depends="init,copymapping">
